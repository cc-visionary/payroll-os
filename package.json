{
  "name": "peopleos",
  "version": "0.1.0",
  "description": "PeopleOS Payroll - A comprehensive payroll management system for Philippine businesses",
  "author": "Christopher Lim <lim.christopher.go@gmail.com>",
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:compile": "npx tsc -p electron/tsconfig.json",
    "build:payload": "node scripts/build-payload.js",
    "build:validate": "node scripts/validate-build.js",
    "electron:build": "npm run build && npm run electron:compile && npm run build:payload && npm run build:validate && electron-builder",
    "electron:pack": "npm run build && npm run electron:compile && npm run build:payload && npm run build:validate && electron-builder --dir",
    "electron:publish": "dotenv -e .env -- npm run electron:build -- --publish always"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed/index.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/archiver": "^7.0.0",
    "@types/pdfkit": "^0.17.4",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "jose": "^6.1.3",
    "next": "16.1.4",
    "pdfkit": "^0.17.2",
    "pg": "^8.17.1",
    "prisma": "^7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^11.0.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.5"
  }
}